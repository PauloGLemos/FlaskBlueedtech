@import url('https://fonts.googleapis.com/css?family=Nobile|Press+Start+2P');

body{
/*font-family: 'Press Start 2P', cursive;*/
font-family: 'Nobile', sans-serif;
}

h1, h2, h3{
font-family: 'Press Start 2P', cursive;
}

.container{
  width: 1100px;
  height: 1000px;
  margin: 10px auto;

}

.cabecalho{
  width: 1100px;
  height: 80px;
  margin-left:10px;
  margin-top:10px;
  border-bottom: 1px solid #00d8ff ;
}

#logo{
  width: 295px;
  height: 78px;
  line-height: 80px;
  background-image: url(../images/logo.png);
  background-repeat: no-repeat;
  background-size: 80px;
  background-position: left;
  float: left;}

#logo h1{
  font-size: 15px;
  text-align:right;

}

.cor-rosa{color: #a6e3e9;}

#menu-navegacao{
  width: 800px;
  height: 80px;
  line-height: 80px;
  text-align: right;
  float: left;
}

#menu-navegacao ul li{
  display: inline;
  margin: 0 60px;

}

#menu-navegacao ul li a{
  text-decoration:none;
  font-weight: 700px;
  color: #00d8ff;
}

#menu-navegacao ul li a:hover{
  color: #006aff;
}

.container-video, .noticias{
  width: 1100px;
  height: 400px;
  margin: 10px 0;
}

.tamanho-video{
  width: 100%;
  height: 100%;
}

.noticias{
  height: 250px;
  border: 1px solid #000;
}
